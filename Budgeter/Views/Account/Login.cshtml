@using Budgeter.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}
@{ 
    Layout ="~/Views/Shared/_anonLayout.cshtml";
}


<body class="money">
  
    <!-- ============================================================================================================================== -->
  <br />

   
        <div class="container-fluid">
            
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="panel panel-default treelogin">

                        <section id="loginForm">
                            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="panel-heading text-center">
                                    <a href="#"> <img src="~/Assets/images/logo-tree.png" alt="Logo" class="m-t-3 m-b-0 h-20"></a>
                                </div>
                                <div class="panel-body">
                                    <h3 class="text-center text-success" style="margin-top: 0px;">
                                        <strong> Welcome to Money Tree! </strong>
                                        <br />
                                        <small class="text-success">The perfect place for shade!</small>
                                    </h3>
                                    
                                    
                                  

                                    <h2 class="text-center f-w-300 m-b-1" style="margin-top: 0px;"> Log In</h2>


                                    @* <form class="m-t-3">*@
                                    @*<div class="form-group">
                                            <input class="form-control" placeholder="Please enter your Email...">
                                        </div>*@

                                    <div class="form-group">
                                        @*@Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })*@
                                        <div class="col-md-offset-1 col-md-10">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Please enter your Email..." })
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    @*<div class="form-group">
                                            <input class="form-control" placeholder="Please enter your Password...">
                                        </div>*@

                                    <div class="form-group">
                                        @* @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })*@
                                        <div class="col-md-offset-1 col-md-10">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Please enter your Password..." })
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    @*<div class="checkbox">
                                            <label>
                                                <input type="checkbox"> Remember Password?
                                            </label>
                                        </div>*@

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <div class="checkbox">
                                                @Html.CheckBoxFor(m => m.RememberMe)
                                                @Html.LabelFor(m => m.RememberMe)
                                            </div>
                                        </div>
                                    </div>

                                    @*<a href="../index.html" role="button" class="btn btn-block m-b-2 btn-primary">Login</a>*@

                                    <div class="form-group">
                                        <div class="col-md-offset-1 col-md-10">
                                            <input type="submit" value="Log In" class="btn btn-block m-b-2 btn-success" />
                                        </div>
                                    </div>

                                </div>
                                <div class="panel-footer custbg">
                                    
                                    @Html.ActionLink("Register", "Register", null, new { @class = "btn btn-primary" })
                                                                        
                                     @Html.ActionLink("Forgot password?", "ForgotPassword", null, new { @class = "btn btn-warning pull-right" }) 

                                    

                                    <hr />
                                    <p class="text-gray-light text-center">
                                        <small>
                                            <strong class="text-success">Money Tree</strong>
                                            <span class="text-success"> &copy; @DateTime.Now.Year - Made with <i class="fa fa-fw fa-heart text-danger"></i> by Jacob S Crawford </span>
                                        </small>
                                    </p>
                                </div>
                            }
                        </section>

                    </div>
                    
                </div>
            </div>
        </div>
 


    <!-- ============================================================================================================================== -->
    
  
</body>






